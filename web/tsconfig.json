{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "composite": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.mjs",
    "src/main.ts",
    "src/utils/request.js",

    "src/router/*",
    "src/router/**/*"
  ],
  "exclude": ["node_modules", "dist", "public"]
}
